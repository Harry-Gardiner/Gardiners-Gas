---
import { Image } from "astro:assets"

// Image imports
import gague from "../image_assets/example_work/gague.webp"
import gas from "../image_assets/example_work/meter.webp"
import hob from "../image_assets/example_work/hob.webp"
import pipes from "../image_assets/example_work/pipes.webp"
import pipes2 from "../image_assets/example_work/pipes-2.webp"
import tap from "../image_assets/example_work/tap.webp"

---
<section id="gallery" class="gallery">
    <h2>Our Work</h2>
    <div class="gallery__grid">
        <div class="gallery__item tall">
            <Image src={gague} alt="Gallery 1" />
        </div>
        <div class="gallery__item wide">
            <Image src={gas} alt="Gallery 2" />
        </div>
        <div class="gallery__item tall">
            <Image src={hob} alt="Gallery 3" />
        </div>
        <div class="gallery__item tall">
            <Image src={pipes} alt="Gallery 4" />
         </div>
        <div class="gallery__item wide">
            <Image src={pipes2} alt="Gallery 5" />
         </div>
        <div class="gallery__item">
            <Image src={tap} alt="Gallery 6" />
        </div>
    </div>
</section>